{
    "compilerOptions": {
       "lib": [
          "es6"
       ],
       "allowJs": true,
       "target": "es6",
       "module": "commonjs",
       "moduleResolution": "node",
       "outDir": "dist",
       "resolveJsonModule": true,
       "emitDecoratorMetadata": true,
       "esModuleInterop": true,
       "experimentalDecorators": true,
       "sourceMap": true,
       "skipLibCheck": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "**/*.spec.ts"]
 }
 
